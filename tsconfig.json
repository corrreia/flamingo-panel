{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@web/*": ["./src/web/*"],
      "@api/*": ["./src/api/*"]
    },
    "types": ["./worker-configuration.d.ts"]
  },
  "include": ["src", "app", "worker"],
  "exclude": ["node_modules", "dist", ".vinext"]
}
